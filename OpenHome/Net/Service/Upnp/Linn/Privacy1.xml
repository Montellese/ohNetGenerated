<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <actionList>
    <action>
      <name>GetPolicyVersion</name>
      <argumentList>
        <argument>
          <name>Version</name>
          <direction>out</direction>
          <relatedStateVariable>PolicyVersion</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetPolicyAgreed</name>
      <argumentList>
        <argument>
          <name>Version</name>
          <direction>out</direction>
          <relatedStateVariable>PolicyAgreed</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>GetPolicyDetails</name>
      <argumentList>
        <argument>
          <name>Details</name>
          <direction>out</direction>
          <relatedStateVariable>PolicyDetails</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetPolicyDetails</name>
      <argumentList>
        <argument>
          <name>Details</name>
          <direction>in</direction>
          <relatedStateVariable>PolicyDetails</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
  <serviceStateTable>
    <stateVariable sendEvents="yes">
      <name>PolicyVersion</name>
      <dataType>ui4</dataType>
    </stateVariable>
    <stateVariable sendEvents="yes">
      <name>PolicyAgreed</name>
      <dataType>ui4</dataType>
    </stateVariable>
    <stateVariable sendEvents="yes">
      <name>PolicyDetails</name>
      <dataType>string</dataType>
    </stateVariable>
  </serviceStateTable>
</scpd>